<Window x:Class="Fahrzeugverwaltung.UI.NewVehicleView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Fahrzeugverwaltung.UI"
        mc:Ignorable="d"
        Title="NewVehicleView" Height="200" Width="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="2*"/>
        </Grid.ColumnDefinitions>
        <Label Content="Typ des Vehicles:" Grid.Row="0" Grid.Column="0"/>
        <TextBox Grid.Row="0" Text="{Binding Type}" Grid.Column="1"/>
        <Label Content="Modell:" Grid.Row="1" Grid.Column="0"/>
        <TextBox Grid.Row="1" Text="{Binding Model}" Grid.Column="1"/>
        <Label Content="Marke:" Grid.Row="2" Grid.Column="0"/>
        <TextBox Grid.Row="2" Text="{Binding Brand}" Grid.Column="1"/>

        <Button Grid.Row="3" Grid.Column="0"
                Grid.ColumnSpan="2"
                Content="speichern"
                Command="{Binding SaveCommand}"
                Width="auto"/>
    </Grid>
</Window>
